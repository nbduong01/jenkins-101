pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                sh 'sudo apt install python3-pip -y'
                sh 'sudo pip3 install -r s05/python-simple-app/requirements.txt'
            }
        }

        stage('run') {
            steps {
                sh 'sudo python3 s05/python-simple-app/app.py &'
            }
        }

        stage('test') {
            steps {
                sh 'sleep 60 && curl -s localhost:8000'
            }
        }

        stage('cleanup') {
            steps {
                sh 'fuser -k 8000/tcp'
            }
        }

    }
}